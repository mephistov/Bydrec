<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent" android:orientation="vertical">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:background="@android:color/darker_gray"
            android:id="@+id/monthZone">

        <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textViewMonth" android:textSize="25sp"
                android:layout_centerVertical="true" android:layout_marginTop="35dp"
                android:layout_marginEnd="25dp" android:layout_marginLeft="25dp" android:layout_marginStart="25dp"
                android:textColor="@color/design_default_color_primary_dark" android:textStyle="bold"/>
    </RelativeLayout>
    <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="175dp">
        <TextView
                android:text="@string/posponed"
                android:layout_width="120dp"
                android:layout_height="wrap_content" android:id="@+id/textViewPosponed"
                android:background="@color/colorAccent" android:textColor="#ffffff"
                android:layout_marginLeft="20dp" android:layout_marginStart="20dp" android:gravity="center"
                android:layout_gravity="right|end" android:visibility="gone" android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"/>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp" android:id="@+id/zon1" android:layout_toStartOf="@+id/zone2"
                android:layout_centerVertical="true" android:layout_marginLeft="10dp" android:layout_marginStart="10dp">
            <TextView
                    android:text="--"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/textView10" android:textSize="10sp"
                    android:textColor="@color/colorAccent"/>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <TextView
                        android:text="---"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content" android:id="@+id/textViewTittle"
                        android:textColor="#000000"
                        android:textStyle="bold"/>
            </LinearLayout>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <TextView
                        android:text="---"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/textViewVenue"/>
                <TextView
                        android:text="---"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/textViewData" android:layout_weight="1"
                        android:layout_marginLeft="10dp" android:layout_marginStart="10dp"/>
            </LinearLayout>
            <TextView
                    android:text="--"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/textView8"
                    android:textColor="@color/colorAccent" android:textSize="10sp" android:layout_gravity="right|end"
                    android:gravity="right" android:layout_marginRight="20dp"/>
            <TextView
                    android:text="--"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/textView7"
                    android:textColor="@color/colorAccent" android:textSize="10sp"/>
            <TextView
                    android:text="----"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/textViewHome" android:textColor="#000000"/>
            <TextView
                    android:text="--"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/textView4"
                    android:textColor="@color/colorAccent" android:textSize="10sp"/>
            <TextView
                    android:text="---"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/textViewAway" android:textColor="#000000"/>
        </LinearLayout>
        <FrameLayout
                android:layout_width="1dp"
                android:layout_height="100dp" android:background="@android:color/darker_gray"
                android:id="@+id/divider" android:layout_marginEnd="5dp"
                android:layout_toLeftOf="@id/zone2" android:layout_alignParentBottom="true"
                android:layout_alignTop="@id/zone2">

        </FrameLayout>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="100dp"
                android:layout_height="wrap_content" android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" android:id="@+id/zone2" android:layout_centerVertical="true">
            <TextView
                    android:text="---"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/textViewDay" android:textSize="25sp"
                    android:textColor="@color/design_default_color_primary_dark" android:textStyle="bold"
                    android:gravity="center"/>
            <TextView
                    android:text="--"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/textView11" android:textSize="10sp"
                    android:textColor="@color/colorAccent"/>
            <TextView
                    android:text="---"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/textViewweek"
                    android:textColor="@color/design_default_color_primary_dark" android:textStyle="bold"
                    android:gravity="center" android:textSize="25sp"/>
            <TextView
                    android:text="TextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/textView13" android:visibility="gone"/>
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>